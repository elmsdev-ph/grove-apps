<odoo>
    <record id="view_stock_picking_inherit_form" model="ir.ui.view">
        <field name="name">stock.picking.form.view.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']/tree" position="attributes">
                <attribute name="decoration-info">is_check</attribute>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']/tree//field[@name='product_id']" position="before">
                <field name="is_check" nolabel="0" width="50"/>
            </xpath>
        </field>
    </record>
    <record id="view_stock_move_inherit_kanban" model="ir.ui.view">
        <field name="name">stock.move.kanban.inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_kandan"/>
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="inside">
                <field name="is_check"/>
            </xpath>
            <xpath expr="//templates/t[@t-name='kanban-box']//div[@class='o_kanban_record_body']" position="inside">
                <div class="row">
                    <div class="col-12 text-muted">
                        <t t-if="record.is_check.raw_value">
                            <span class="badge bg-success">Checked</span>
                        </t>
                        <t t-if="!record.is_check.raw_value">
                            <span class="badge bg-secondary">Not Checked</span>
                        </t>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    <record id="view_stock_move_operations_inherit_form" model="ir.ui.view">
        <field name="name">stock.move.operations.form.inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_stock_move_operations"/>
        <field name="arch" type="xml">
            <xpath expr="//form/group" position="inside">
                <label for="is_check" string="Is Check?"/>
                <field name="is_check"/>
            </xpath>
        </field>
    </record>
</odoo>