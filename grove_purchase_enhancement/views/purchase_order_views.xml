<odoo>
    <record id="view_purchase_order_inherit_form" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree" position="attributes">
                <attribute name="decoration-info">is_check</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="before">
                <field name="is_check" nolabel="0" width="50"/>
            </xpath>
            <xpath expr="//kanban" position="inside">
                <field name="is_check"/>
            </xpath>
            <xpath expr="//templates/t[@t-name='kanban-box']//div[@class='row']" position="before">
                <div class="row">
                    <div class="col-12 text-muted">
                        <t t-if="record.is_check.raw_value">
                            <span class="badge bg-success">Checked</span>
                        </t>
                        <t t-if="!record.is_check.raw_value">
                            <span class="badge bg-secondary">Not Checked</span>
                        </t>
                    </div>
                </div>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//group//field[@name='taxes_id']" position="after">
                <field name="is_check" string="Is Check?"/>
            </xpath>
        </field>
    </record>
</odoo>